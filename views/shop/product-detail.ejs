<link rel="stylesheet" href="/css/product-detail.css">
<%- include('../includes/navbar.ejs') %>

<div class="product-page">
    <!-- Product Overview Section -->
    <div class="product-overview">
      <div class="product-image">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
      </div>
      <div class="product-info">
        <h1 class="product-title"><%= product.title.toUpperCase() %></h1>
        <p class="short-description"><%= product.description %></p>
        <p class="price">Price: $<%= product.price %>/kg</p>
        <p class="availability"><span class="in-stock">In Stock</span></p>
        <p class="discount">Buy 2kg, get 10% off</p>
        <a href="/cart/add/<%= product.id %>" class="btn btn-add-to-cart">Add to Cart</a>
        <!-- we can do this add to car this with form with hidden input filed -->
      </div>
    </div>
  
    <!-- Section Cards -->
    <div class="section-cards">
      <!-- Product Specifications -->
      <div class="section-card product-specifications">
        <h2>Specifications</h2>
        <ul>
          <li><strong>Category:</strong> Fruit</li>
          <li><strong>Weight Options:</strong> 500g, 1kg, 2kg</li>
          <li><strong>Origin:</strong> Local Farm, California</li>
          <li><strong>Type:</strong> Organic</li>
        </ul>
      </div>
  
      <!-- Health Benefits -->
      <div class="section-card health-benefits">
        <h2>Health Benefits</h2>
        <ul>
          <li><strong>Calories:</strong> 52 per 100g</li>
          <li>Rich in Vitamin C, Potassium, and Fiber</li>
          <li>Promotes heart health and digestion</li>
        </ul>
      </div>
  
      <!-- Usage and Storage -->
      <div class="section-card usage-storage">
        <h2>Usage & Storage</h2>
        <ul>
          <li>Great for snacking, salads, or juicing.</li>
          <li>Keep refrigerated to maintain freshness for up to 2 weeks.</li>
        </ul>
      </div>
  
      <!-- Delivery Information -->
      <div class="section-card delivery-info">
        <h2>Delivery</h2>
        <ul>
          <li>Home delivery available within 24 hours.</li>
          <li>Available for pickup from our local store.</li>
          <li>Delivery Areas: California, Nevada, Arizona.</li>
        </ul>
      </div>
  
